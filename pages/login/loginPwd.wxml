<view class="container">
    <view id="input-area">
        <view class="input-pwd input-cell">
            <image src="https://www.iumer.cn/umer/css/image/wechat/app/pwd@3x.png"></image>
            <input type="password" maxlength="16" placeholder="请输入您的密码" bindinput="inputPwd"/>
        </view>
    </view>
    <view id="btn-area">
        <view class="text-center btn-login" bindtap="login">登录</view>
        <view class="text-center btn-forget" bindtap="forget">忘记密码</view>
    </view>
</view>
