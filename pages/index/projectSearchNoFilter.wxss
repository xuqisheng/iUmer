page {
    background-color: #F1F1F1;
	height: 100%;
}
.container {
    font-size: 30rpx;
	height: 100%;
}
.no-data image {
	width: 75%;
	height: calc(750rpx / 742 * 278 * 0.75);
  margin-top: -100rpx;
}
.no-data text {
	margin-top: 45rpx;
}
.top-menu-active {
	padding: 0 20rpx;
	display: flex;
	background-color: #F1F1F1;
	color: black;
	justify-content: space-between;
	align-items: center;
	height: 96rpx;
}	
.top-menu-search {
	position: relative;
	width: 600rpx;
	background-color: white;
	font-size: 28rpx;
}
.top-menu-search .search-icon {
	position: absolute;
	left: 16rpx;
	top: 14rpx;
	background-image: url('https://www.iumer.cn/umer/css/image/wechat/search@3x.png');
	background-repeat: no-repeat;
	background-size: 32rpx 32rpx;
	width: 32rpx;
	height: 32rpx;
}
.top-menu-search input {
	width: 90%;
	height: 100%;
	border: none;
	color: black;
	margin-left: 60rpx;
	line-height: normal;
	padding: 10rpx 0;
}
#project-area {
	height: calc(100% - 96rpx);
}
.hot-item {
	background-color: white;
	display: flex;
	justify-content: space-between;
	font-family: SimHei;
	border-top: solid 2rpx #F7F7F7;
    padding: 0 20rpx;
}
.hot-item:first-child {
}
.hot-item-left {
	width: 150rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction:column;
    margin-right: 20rpx;
}
.hot-item-left .hot-item-img {
	display: flex;
	align-items: center;
}
.hot-item-left .hot-item-img image {
	width: 130rpx;
	height: 130rpx;
  border: solid 2rpx #E4E4E4;
  border-radius: 8rpx;
}
.hot-item-right {
	width: 100%;
	padding: 20rpx 0;
}
.hot-item-name {
	color: #222222;
	margin-bottom: 10rpx;
  font-size: 108%
}
.hot-item-place-and-price {
	display: flex;
	justify-content: space-between;
}
.hot-item-price {
	color: orange;
  font-size: 110%;
}
.hot-item-price text {
	text-decoration: line-through; 
	color: #777777; 
	margin-left: 10rpx;
  font-size: 80%;
}
.hot-item-place {
	color: #393939;
}
.hot-item-info {
	display: flex;
	justify-content: space-between;
}
.hot-item-info-distance {
	color: #777777;
	display: flex;
	align-items: center;
  font-size: 90%;
}
.hot-item-info-distance image {
	width: 30rpx;
	height: 40rpx;
  margin: 10rpx 10rpx 10rpx 0;
}
.hot-item-info-duration {
	color: #777777;
	display: flex;
	align-items: center;
  font-size: 90%;
}
.hot-item-info-duration image {
	width: 30rpx;
	height: 30rpx;
	margin: 10rpx;
}
.red {
    color: #FD8CA3;
}
