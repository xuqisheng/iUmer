/**index.wxss**/
.container {
	font-size: 30rpx;
}
.top-menu-area {
	display: flex;
	align-items: center;
}
.top-menu-search-bar {
	z-index: 1000;
}
.top-menu-alert image {
	width: 48rpx;
	height: 48rpx;
}
.index-header {
	display: flex;
	justify-content: flex-start;
	align-items: center;
	padding-bottom: 10rpx;
}
.nav-item-img image {
	width: 100rpx;
	height: 100rpx;
}
.weui-mask {
	display: none;
}
.top-menu-active {
	padding: 0 20rpx;
	display: flex;
	background-color: #F1F1F1;
	color: black;
	justify-content: space-between;
	align-items: center;
	height: 96rpx;
}	
.red {
	color: #E84057 !important;
}
#nav {
	width: 100%;
	margin: 0 auto;
	display: flex;
	justify-content: center;
	background-color: white;
	margin-bottom: 10rpx;
	text-align: center;
}
.nav-item {
	padding: 16rpx 20rpx;
}
.nav-item-txt {
	font-family: SimHei;
	font-size: 28rpx;
}
#hot-area {

}
#hot {
	background-color: white;
	padding: 20rpx 20rpx 0 20rpx;
}
.hot-item {
	background-color: white;
	display: flex;
	justify-content: space-between;
	font-family: SimHei;
	border-top: solid 2rpx #F7F7F7;
}
.hot-item:first-child {
	margin-top: 10rpx;
}
.hot-item-left {
	width: 150rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction:column;
	margin-right: 20rpx;
}
.hot-item-left .hot-item-img image {
	width: 130rpx;
	height: 130rpx;
}
.hot-item-right {
	width: 100%;
	padding: 20rpx 0 10rpx 0;
}
.hot-item-name {
	color: #414141;
	margin-bottom: 10rpx;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	width: 100%;
}
.hot-item-place-and-price {
	display: flex;
	justify-content: space-between;
}
.hot-item-place {
	color: #414141;
}
.hot-item-price {
	color: orange;
}
.hot-item-price text {
	text-decoration: line-through; 
	color: gray; 
	margin-left: 10rpx;
}
.hot-item-info {
	display: flex;
	justify-content: space-between;
}
.hot-item-info-distance {
	color: #686868;
	display: flex;
	align-items: center;
}
.hot-item-info-distance image {
	width: 30rpx;
	height: 40rpx;
	margin: 10rpx 10rpx 10rpx 0;
}
.hot-item-info-duration {
	color: #686868;
	display: flex;
	align-items: center;
}
.hot-item-info-duration image {
	width: 30rpx;
	height: 30rpx;
	margin: 10rpx;
}
#people {
	background-color: white;
	padding: 20rpx 20rpx 0 20rpx;
	margin-top: 10rpx;
}
.people-item {
	background-color: white;
	display: flex;
	justify-content: space-between;
	font-family: SimHei;
	border-top: solid 2rpx #F7F7F7;
}
.people-item:first-child {
	margin-top: 10rpx;
}
.people-item-left {
	width: 150rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction:column;
	margin-right: 20rpx;
}
.people-item-left .people-item-img image {
	width: 130rpx;
	height: 130rpx;
}
.people-item-right {
	width: 100%;
	padding: 20rpx 0 10rpx 0;
}
.people-item-right .star {
	display: flex;
	margin-top: 10rpx;
}
.people-item-right .star image {
	width: 32rpx;
	height: 32rpx;
}
.people-item-name {
	color: #414141;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
	width: 100%;
}
.people-item-place {
	color: #414141;
}
.people-item-dot-line {
	margin-right: 40rpx;
	background-image: url('https://www.iumer.cn/umer/css/image/wechat/dotted-line@2x.png');
	width: 100%;
	height: 2rpx;
	background-size: 100% 100%;
	background-repeat: no-repeat;
}
.people-item-info {
	display: flex;
	justify-content: space-between;
}
.people-item-info-distance {
	color: #686868;
	display: flex;
	align-items: center;
}
.people-item-info-distance image {
	width: 30rpx;
	height: 40rpx;
	margin: 10rpx 10rpx 10rpx 0;
}
.people-item-info-board-comment {
	display: flex;
}
.people-item-info-comment {
	color: #686868;
	display: flex;
	align-items: center;
}
.people-item-info-comment image {
	width: 30rpx;
	height: 30rpx;
	margin: 10rpx;
}
.people-item-info-board {
	color: #686868;
	display: flex;
	align-items: center;
}
.people-item-info-board image {
	width: 30rpx;
	height: 30rpx;
	margin: 10rpx;
}
.top-menu-area image {
	height: 14rpx;
	width: 24rpx;
}
.top-menu-search {
	position: relative;
	width: 500rpx;
	background-color: white;
	font-size: 28rpx;
}
.top-menu-search .search-icon {
	position: absolute;
	left: 16rpx;
	top: 12rpx;
	background-image: url('https://www.iumer.cn/umer/css/image/wechat/search@3x.png');
	background-repeat: no-repeat;
	background-size: 32rpx 32rpx;
	width: 32rpx;
	height: 32rpx;
}
.top-menu-search .placeholder {
	width: 90%;
	height: 100%;
	border: none;
	margin-left: 60rpx;
	line-height: normal;
	padding: 10rpx 0;
	color: gray;
}