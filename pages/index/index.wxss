.top-menu-search-bar form {
	height: 100%;
	width: 100%;
}
.top-menu-search-bar input {
	border: none;
	width: 90%;
	padding-left: 10px;
	height: 100%;
	line-height: normal;
}
.top-menu-search-cancel {
	margin-left: 15px;
	color: white;
}
#nav {
	width: 100%;
	margin: 0 auto;
	display: flex;
	justify-content: center;
	background-color: white;
	margin-bottom: 10rpx;
	text-align: center;
}
.nav-item {
	padding: 16rpx 20rpx;
}
.nav-item-txt {
	font-family: SimHei;
}
#hot-area {
	display: flex;
	flex-wrap: wrap;	
	justify-content: flex-start;
}
#hot {
	background-color: white;
	padding: 8px;
}
.hot-item {
	border: solid 1px #F7F7F7;
	width: 31.5%;
	font-family: SimHei;
	padding: 2rpx 4rpx;
	margin-top: 10rpx;
	color: #414141;
	position: relative;
}
.hot-item .hot-item-label-text {
	color: white;
	position: absolute;
	z-index: 2;
	right: -4rpx;
	top: 18rpx;
	transform:rotate(42deg);
	font-size: 25rpx;
}
.hot-item-img {
	width: 100%;
}
.hot-item-img image {
	width: 100%;
	height: 225rpx;
}
.hot-item .hot-item-label {
	position: absolute;
	right: 0;
	top: 0;
	width: 100rpx;
	height: 100rpx;
}
.hot-item-image image {
	width: 100%;
}
.hot-item-content {
	padding: 4rpx 10rpx;
}
.hot-item-title {
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}
.hot-item-place {
	overflow: hidden;
	white-space: nowrap;
}
.hot-item-info {
	color: #414141;
}
.hot-item-info-price {
	float: right;
	color: red;
}
.people-item {
	background-color: white;
	display: flex;
	justify-content: space-between;
	font-family: SimHei;
	border-top: solid 2rpx #F7F7F7;
}
.people-item:first-child {
	margin-top: 10rpx;
}
.people-item:last-child {
	border-bottom: solid 2rpx #F7F7F7;
}
.people-item-left {
	width: 200rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction:column;
}
.people-item-left .people-item-img image {
	width: 100rpx;
	height: 100rpx;
	border-radius: 100%;
	margin-bottom: 10rpx;
}
.people-item-left .star {
	display: flex;
}
.people-item-left .star image {
	width: 32rpx;
	height: 32rpx;
}
.people-item-right {
	width: 100%;
	padding: 20rpx 0;
}
.people-item-name {
	color: #414141;
}
.people-item-place {
	color: #414141;
}
.people-item-dot-line {
	margin-right: 40rpx;
	background-image: url('../../images/dotted-line@2x.png');
	width: 100%;
	height: 2rpx;
	background-size: 100% 100%;
	background-repeat: no-repeat;
}
.people-item-info {
	display: flex;
	justify-content: space-between;
}
.top-menu-area image {
	height: 24rpx;
	width: 24rpx;
}
.top-menu-search {
	position: relative;
	width: 460rpx;
	background-color: white;
	border-radius: 30rpx;
	font-size: 28rpx;
}
.top-menu-search .search-icon {
	position: absolute;
	left: 16rpx;
	top: 12rpx;
	background-image: url(../../images/search@3x.png);
	background-repeat: no-repeat;
	background-size: 32rpx 32rpx;
	width: 32rpx;
	height: 32rpx;
}
.top-menu-search input {
	width: 90%;
	height: 100%;
	border: none;
	color: black;
	margin-left: 60rpx;
	line-height: normal;
}