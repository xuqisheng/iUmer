.shop-info-area-txt-description {
	padding-left: 20rpx;
}
.shop-info-area-txt-stats {
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
}
.shop-info-area-txt-stats text {
	color: #e84057;
}
#other-info-area {
	margin-top: 10rpx;
	background-color: white;
}
.other-cell {
	padding: 10rpx;
}
.other-cell:not(:last-child) {
	border-bottom: solid 1px #F7F7F7;
}
.other-info-area-procedure {
	font-size: 25rpx;
}
#btn-area {

}
#btn-area .btn-area-collect {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 20%;
	z-index: 1000;
	background-color: white;
	color: #686868;
	height: 80rpx;
}
#btn-area .btn-area-collect image {
    width: 40rpx;
    height: 40rpx;
	display: block;
	text-align: center;
	margin: 0 auto;
}
#btn-area .btn-area-collect text {
	font-size: 25rpx;
}
.btn-area-btn {
	position: fixed;
    background-color: #E84057;
    padding: 10px 0;
    color: white;
    font-family: SimHei;
    width: 80%;
    right: 0;
    z-index: 1000;
    bottom: 0;
}
#btn-area-detail .btn-collect {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 20%;
	z-index: 1000;
	background-color: white;
	color: #686868;
	height: 40px;
}
#btn-area-detail .btn-collect img {
    width: 20px;
    height: 20px;
}
#btn-area-detail .btn-appoint {
	position: fixed;
	bottom:0;
	right: 0;
	padding: 10px;
	width: 80%;
	color: white;
	background-color: #e84057;
	font-weight: bold;
	z-index: 1000;
}
#top-tabs-2 {
	padding: 5px;
