#comment {
	height: 100%;
}
.comment-item {
	padding: 10px;
	background-color: white;
}
.comment-item-hd {
	display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
