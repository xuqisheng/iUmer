page {
    height: 100%;
}
.container {
    font-size: 30rpx;
    height: 100%;
	background-color: #F7F7F7;
}
.swiper1 {
    height: calc(100% - 96rpx);
	overflow: scroll;
}
.swiper2 {
    height: 100%;
}
#top-tabs .tab-outer {
	border: solid 2rpx white;
	border-radius: 40rpx;
    display: flex;
	justify-content: center;
	padding: 6rpx;
}
#top-tabs .tab-inner {
	color: white;
	padding: 10rpx 40rpx;
}
#top-tabs .tab-inner-on {
	color: #E84057 !important;
	background-color: white;
	border-radius: 20px;	
}
#avatar-area {

}
.swiper-container {
    width: 100%;
}
.swiper-slide {
    text-align: center;
    font-size: 18px;
    background: #fff;
    /* Center slide text vertically */
	display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.swiper-slide image {
	width: 100%;
}
.swiper-pagination-bullet {
  	background-image: url('../../image/wechat/2q@3x.png');
  	background-size: 8px 8px;
	opacity: 1;
}
.swiper-pagination-bullet-active {
    background-image: url('../../image/wechat/3q@3x.png');
	background-size: 8px 8px;
	opacity: 1;
	background-color: transparent;
}	
.swiper-description {
	width: 100%;
    position: absolute;
    bottom: 0;
   	left: 0;
    background: rgba(255,255,255,0.5);
   	padding: 20rpx 0;
    display: flex;
    justify-content: space-between;
    color: #e84057;
    z-index: 2;
}
.swiper-description-project-title {
	width: 50%;
	overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    text-align: left;
}
.swiper-description-project-duration {
	text-align: right;
}
#description-area {
	margin-top: 5px;
	background-color: white;
}
.description-cell {
	padding: 10rpx;
}
.description-cell:not(:last-child) {
	border-bottom: solid 1px #F7F7F7;
}
#shop-info-area {
	margin-top: 10rpx;
	background-color: white;
	padding: 20rpx;
    display: flex;
}
.shop-info-area-logo {
	width: 128rpx;
	height: 128rpx;
}
.shop-info-area-logo image {
	width: 100%;
	height: 100%;
}
.shop-info-area-txt {
	width: 80%;
}
.shop-info-area-txt-title {
	padding-left: 10px;
	display: -webkit-box;
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    justify-content: space-between;
    -webkit-justify-content: space-between;
}
