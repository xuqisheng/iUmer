page {
    background-color: #F1F1F1;
	height: 100%;
}
.container {
    font-size: 30rpx;
	height: 100%;
}
.no-data image {
	width: 75%;
	height: calc(750rpx / 742 * 278 * 0.75);
  margin-top: -100rpx;
}
.no-data text {
	margin-top: 45rpx;
}
.top-menu-active {
	padding: 0 20rpx;
	display: flex;
	background-color: #F1F1F1;
	color: black;
	justify-content: space-between;
	align-items: center;
	height: 96rpx;
}	
.top-menu-search {
	position: relative;
	width: 600rpx;
	background-color: white;
	font-size: 28rpx;
}
.top-menu-search .search-icon {
	position: absolute;
	left: 16rpx;
	top: 14rpx;
	background-image: url('https://www.iumer.cn/umer/css/image/wechat/search@3x.png');
	background-repeat: no-repeat;
	background-size: 32rpx 32rpx;
	width: 32rpx;
	height: 32rpx;
}
.top-menu-search input {
	width: 90%;
	height: 100%;
	border: none;
	color: black;
	margin-left: 60rpx;
	line-height: normal;
	padding: 10rpx 0;
}
#personnel-area {
  background-color: white;
	height: calc(100% - 96rpx);
}
.people-item {
	background-color: white;
	display: flex;
	justify-content: space-between;
	font-family: SimHei;
	border-top: solid 2rpx #F7F7F7;
  padding: 0 20rpx;
}
.people-item:first-child {

}
.people-item-left {
	width: 150rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction:column;
	margin-right: 20rpx;
}
.people-item-left .people-item-img {
	display: flex;
	align-items: center;
}
.people-item-left .people-item-img image {
	width: 130rpx;
	height: 130rpx;
  border: solid 2rpx #E4E4E4;
  border-radius: 8rpx;
}
.people-item-right {
	width: 100%;
	padding: 20rpx 0;
}
.people-item-right .star {
	display: flex;
	margin-top: 10rpx;
}
.people-item-right .star image {
	width: 28rpx;
	height: 28rpx;
}
.people-item-right .star view:not(:first-child) image {
	padding-left: 5rpx;
}
.people-item-name {
	color: #222222;
  font-size: 108%;
}
.people-item-place {
	color: #393939;
}
.people-item-dot-line {
	margin-right: 40rpx;
	background-image: url('https://www.iumer.cn/umer/css/image/wechat/dotted-line@2x.png');
	width: 100%;
	height: 2rpx;
	background-size: 100% 100%;
	background-repeat: no-repeat;
}
.people-item-info {
	display: flex;
	justify-content: space-between;
}
.people-item-info-distance {
	color: #777777;
	display: flex;
	align-items: center;
  font-size: 90%;
}
.people-item-info-distance image {
	width: 30rpx;
	height: 40rpx;
	margin: 10rpx 10rpx 10rpx 0;
}
.people-item-info-board-comment {
	display: flex;
}
.people-item-info-comment {
	color: #777777;
	display: flex;
	align-items: center;
  font-size: 90%;
}
.people-item-info-comment image {
	width: 30rpx;
	height: 30rpx;
	margin: 10rpx;
}
.people-item-info-board {
	color: #777777;
	display: flex;
	align-items: center;
  font-size: 90%;
}
.people-item-info-board image {
	width: 30rpx;
	height: 30rpx;
	margin: 10rpx;
}
.red {
    color: #FD8CA3;
}
