/* pages/index/location.wxss */
page {
    height: 100%;
}
.container {
    font-size: 30rpx;
    height: 100%;
}
#top-menu {
    display: flex;
    padding: 0 10px;
    background-color: #E84057;
    color: white;
    justify-content: space-between;
    align-items: center;
    height: 96rpx;
}
.top-menu-search {
	position: relative;
    background: white;
    border-radius: 30rpx;
    width: 80%;
}
.top-menu-search form {
	height: 100%;
}
.top-menu-search .search-icon {
	position: absolute;
    left: 16rpx;
    top: 12rpx;
    background-image: url(../../images/search@3x.png);
    background-repeat: no-repeat;
    background-size: 32rpx 32rpx;
    width: 32rpx;
    height: 32rpx;
}
.top-menu-search input {
    width: 80%;
    height: 100%;
    border: none;
    color: black;
    margin-left: 60rpx;
    line-height: normal;
    font-size: 25rpx;
}
.current-city {
	padding: 10rpx;
	color: #414141;
    font-size: 30rpx;
}
.baidu-city {
	padding: 10rpx;
	color: #414141;
    font-size: 30rpx;
}
.city-index {
	color: #ED175D;
	background-color: #f1f1f1;
	width: 100%;
	padding: 10rpx;
    font-size: 35rpx;
}
.city {
	color: #414141;
	padding: 10rpx;
    font-size: 30rpx;
}
.city:not(:last-child) {
	border-bottom: solid 2rpx #e4e4e4;
}
.city-nav {
	position: fixed;
	right: 0;
	top: 100rpx;
    display: flex;
    flex-direction:column;
    background-color: #e84057;
    padding: 4rpx 10rpx;
    border-radius: 20rpx;
    color: white;
    font-size: 30rpx;
    z-index: 999;
}