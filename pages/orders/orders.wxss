page {
    height: 100%;
}
.container {
    height: 100%;
}
.no-data image {
	width: 75%;
	height: calc(750rpx / 742 * 278 * 0.75);
  margin-top: -100rpx;
}
.no-data text {
	margin-top: 45rpx;
}
.red {
    color: #FF0074;
}
.top-tabs {
    width: 100%;
    display: flex;
    justify-content: space-between;
    background-color: white;
    overflow: scroll;
    white-space: nowrap;
}
.top-tab {
    padding: 20rpx 0;
    display: inline-block;
    width: 33%;
    position: relative;
}
.top-tab-on {
    border-bottom: solid 4rpx #FF0074;
    color: #FF0074;
}
.countNotification {
  width: 35rpx;
  height: 35rpx;
  background-color: darkorange;
  border-radius: 50%;
  color: white;
  position: absolute;
  right: 25%;
  top: 5rpx;
}
.flex-space-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order-item {
    background-color: white;
    border-bottom: solid 2rpx #F7F7F7;
    padding: 0 20rpx;
}
.order-item {
    margin-top: 10rpx;
}
.order-item-hd {
  padding: 20rpx 0;
  border-bottom: solid 2rpx #F7F7F7;
  font-size: 90%;
}
.order-item-hd-shop {
  display: flex;
  align-items: center;
}
.order-item-hd-shop image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  border-radius: 8rpx;
}
.order-item-hd-status {
  display: flex;
  align-items: center;
}
.order-item-bd {
    display: flex;
    justify-content: space-between;
    padding: 20rpx 0;
}
.order-item-left {
    width: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.order-item-left image {
    width: 120rpx;
    height: 120rpx;
    margin-right: 20rpx;
    border: solid 2rpx #E4E4E4;
    border-radius: 8rpx;
}
.order-item-middle {
    flex-grow: 2;
    padding: 0 0 0 0;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.order-item-middle view:not(:first-child) {
    margin-top: 5rpx;
}
.order-item-middle-title-and-price {
    display: flex;
    justify-content: space-between;
}
.order-item-middle-shop-and-status {
    display: flex;
    justify-content: space-between;
}
.order-item-middle-title {
    font-size: 35rpx;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.order-item-middle-shop {
    font-size: 30rpx;
}
.order-item-middle-reserve-time, .order-item-middle-price {
    font-size: 28rpx;
    color: gray;
}
.order-item-right {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-end;
    padding: 0 20rpx 20rpx 0;
}
.order-item-right-price {
    margin-bottom: 10rpx;
}
.order-item-ft {
    border-top: solid 2rpx #F7F7F7;
}
.order-item-ft view:first-child {
    /*margin-bottom: 10rpx;*/
}
.order-item-ft view {
    display: flex;
    justify-content: space-between;
}
.price text {
	text-decoration: line-through; 
	color: gray; 
	margin-left: 10rpx;
}
.order-item-right-status {
  color: gray;
  border: solid 2rpx gray;
  padding: 6rpx 18rpx;
  border-radius: 4rpx;
  width: 90rpx;
  font-size: 25rpx;
  text-align: center;
}
.order-item-btns {
  padding: 20rpx 0;
  display: flex;
  justify-content: flex-end;
}
.order-item-btn-view {
  border: solid 2rpx gray;
  border-radius: 8rpx;
  color: gray;
  padding: 10rpx 30rpx;
}
.order-item-btn-comment {
  border: solid 2rpx orange;
  border-radius: 8rpx;
  color: orange;
  padding: 10rpx 30rpx;
}
.order-item-btn-reward {
  border: solid 2rpx orange;
  border-radius: 8rpx;
  color: orange;
  padding: 10rpx 30rpx;
  margin-right: 10rpx;
}
.order-item-btn-pay {
  border: none;
  border-radius: 8rpx;
  color: white;
  background-color: #FF0074;
  padding: 10rpx 30rpx;
}