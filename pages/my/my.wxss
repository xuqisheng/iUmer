/* pages/my/my.wxss */
.bold {
  font-weight: bold;
}
.flex-space-between {
  display: flex;
  justify-content: space-between;
}
#personel-area, #menu-area, #logout-area {
  background-color: white;
  padding: 10rpx;
}
#personel-area {
  background-color: #FF0074;
}
#personel-area .personel-info {
  display: flex;
}
#personel-area .personel-info-left {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
#personel-area .personel-info-left image {
  border-radius: 50%;
  width: 130rpx;
  height: 130rpx;
}
#personel-area .personel-info-right {
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  width: 100%;
}
#personel-area .personel-info-right .personel-info-right-name {
  color: white;
  font-size: 120%;
}
#personel-area .personel-info-right .personel-info-right-exp {
  width: 100%;
}
#personel-area .personel-info-right .personel-info-right-exp progress{
  border: solid 2rpx yellow;
  border-radius: 2rpx;
}
#personel-area .personel-info-right .personel-info-right-level {
  width: 100%;
  font-size: 90%;
}
#personel-area .personel-info-right .personel-info-right-level text:nth-child(1) {
  color: white;
}
#personel-area .personel-info-right .personel-info-right-level text:nth-child(2) {
  color: yellow;
}
#menu-area .menus {
  display: flex;
  justify-content: center;
}
#menu-area .menus .menu-item {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 33%;
}
#menu-area .menus .menu-item:nth-child(2) {
  border-left: solid 2rpx #F7F7F7;
  border-right: solid 2rpx #F7F7F7;
}
#logout-area {
  margin-top: 10rpx;
}